#!/bin/sh

if [ $1 = "start" ]; then
    if  [ "$2" = "-server" ]; then
        $JAVA_HOME/bin/java -classpath $OKUYAMA_HOME:$OKUYAMA_HOME/bin/okuyama-0.8.7.jar:$OKUYAMA_HOME/lib/log4j-1.2.14.jar:$OKUYAMA_HOME/lib/javamail-1.4.1.jar:$OKUYAMA_HOME/lib/commons-codec-1.4.jar -Xss512k  -Xmx1024m -Xms512m -server -XX:+UseConcMarkSweepGC -XX:+CMSParallelRemarkEnabled -XX:+UseParNewGC okuyama.base.JavaMain $OKUYAMA_HOME/conf/Main.properties $3 1>$4 2>$5&
    else 
        $JAVA_HOME/bin/java -classpath $OKUYAMA_HOME:$OKUYAMA_HOME/bin/okuyama-0.8.7.jar:$OKUYAMA_HOME/lib/log4j-1.2.14.jar:$OKUYAMA_HOME/lib/javamail-1.4.1.jar:$OKUYAMA_HOME/lib/commons-codec-1.4.jar -Xss512k  -Xmx1024m -Xms512m -server -XX:+UseConcMarkSweepGC -XX:+CMSParallelRemarkEnabled -XX:+UseParNewGC okuyama.base.JavaMain $OKUYAMA_HOME/conf/Main.properties $2
    fi

elif [ $1 = "stop" ]; then
    sh $OKUYAMA_HOME/bin/stop.sh | telnet 127.0.0.1 $2
fi

